#!/usr/bin/env bash
set -e

if [ ! ./.dockerenv ]; then
    ./bin/docker-dotenv
fi

echo "Initializing containers "
docker-compose build
echo "Initializing lime_survey"
docker-compose run lime /docker/init.sh
echo "Initializing reindeer"
docker-compose run reindeer /docker/init.sh

docker-compose stop
docker-compose up -d

echo "

Docker initialization complete.
Details about running containers:

"
docker-compose ps

