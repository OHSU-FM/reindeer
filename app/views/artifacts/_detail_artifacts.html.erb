
  <table class="table table-condensed table-hover spreadsheet-body">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>UserID</th>
        <th>Artifacts/Documents</th>
      </tr>
    </thead>
    <% if idx_epa == "Official Student Letters" %>
      <% epa = "Progress Board Letter" %>
    <% else %>
      <% epa = "EPA#{idx_epa}" %>
    <% end %>
    <% selected_artifacts = @artifacts_student.select{|a| a if a.content == epa or a.content == 'Other' } %>

    <% selected_artifacts.each do |artifact| %>
        <tr>
          <td><%= artifact.title %></td>
          <td><%= artifact.content %> </td>
          <td><%= artifact.user_id.to_s %></td>
          <td><table class="responsive table table-hover">
            <% if artifact.documents.attached? %>
              <% artifact.documents.each do |document| %>
                <tr>
                  <td> <%= document.filename %> </td>
                  <td>
                    <%= link_to 'View', url_for(document), target: :_blank %>
                    /
                    <%= link_to 'Download', rails_blob_path(document, disposition: 'attachment') %>
                  </td>
                </tr>
              <% end %>
            <% end %>
           </table>
          </td>
        </tr>

    <% end %>

  </table>
