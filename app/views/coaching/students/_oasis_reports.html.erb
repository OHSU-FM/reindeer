<br />
<div id="container-fluid">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">

          <span style: "display: inline-block">
            <%= button_to "All Advisors", advisor_reports_coaching_student_path(id: "All"), method: :post, remote: true,
            class: 'btn btn-small btn-info', style: "display: inline-block" %>
             <%= form_tag(advisor_reports_coaching_student_path, method: :post, remote: true) do %>
                <%= label_tag :Advisor %>
                <%= select_tag :id, options_from_collection_for_select(@advisors, "id", "name"), selected: params[:id], include_blank: "...",
                    prompt: "Please Select an Advisor" %>
                 <%= submit_tag "Go", name: 'advisor-reports-btn' %>
              <% end %>
          </span>

      </div>
    </div>

    <div id="advisor-reports">
      <% if !@advisor.nil? %>
        <%= render partial: "advisor_reports", locals: {advisor: @advisor} %>
      <% end %>
    </div>

  </div>
</div>
