
  <table class="table table-responsive nowrap table-hover" data-toggle="table" id="main_appointments_table" data-sort="true" data-url="<%= url_for(format: :json) %>">
    <thead>
      <tr>
        <th data-data="Student">Student</th>
        <th data-data="Advisor">Advisor</th>
        <th data-data="start_date">Start date</th>
        <th data-data="end_date">End date</th>
        <th data-data="created_at">Created At</th>
      </tr>
    </thead>

    <% if !@event_students.nil? %>
      <% @event_students.each do |event| %>
        <% user = User.find(event.user_id) %>
        <tr>
          <td><%= link_to(user.full_name + ' - ' + hf_get_cohort(user), coaching_student_path(user), target: '_blank') %></td>
          <td><%= event.description %></td>
          <td><%= event.start_date.strftime("%m/%d/%Y %I:%M %p - %A") %></td>
          <td><%= event.end_date.strftime("%m/%d/%Y %I:%M %p - %A")%></td>
          <td><%= event.created_at.strftime("%m/%d/%Y %I:%M %p - %A")%></td>
        </tr>
      <% end %>
    <% end %>
  </table>
