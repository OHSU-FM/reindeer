<div class="flex-child">
  <div id="accordion">
    <% @permission_groups.sort.each do |group| %>
      <div class="card">
        <div class="card-header" id="#<%= group.id %>">
          <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#collapse<%= group.id %>" aria-expanded="true" aria-controls="collapse<%= group.id %>">
              <%= group.title %>
            </button>
          </h5>
        </div>
        <div id="collapse<%= group.id %>" class="collapse" aria-labelledby="#<%= group.id %>" data-parent="#accordion">
          <div class="card-body">
            <% students = User.where(permission_group_id: group.id) %>
            <% students.sort_by{|u| [u.full_name]}.each do |student| %>

                <%= link_to "#{student.full_name}:
                      #{pluralize(student.meetings.count, 'meeting')} - #{hf_get_cohort(student)}",
                      coaching_student_path(student) %> <br />

            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="card">
      <div class="card-header" id="YourStudents">
        <h5 class="mb-0">
          <button class="btn btn-link" data-toggle="collapse" data-target="#collapseYourstudents" aria-expanded="true" aria-controls="collapseYourstudents">
            <h4><i>Your Students</i><h4>
          </button>
        </h5>
      </div>
      <div id="collapseYourstudents" class="collapse show" aria-labelledby="#YourStudents" data-parent="#accordion">
        <div class="card-body">
          <% @advisor_students.each do |student_id| %>
            <% student = User.find(student_id) %>
            <%= link_to "#{student.full_name}:
                  #{pluralize(student.meetings.count, 'meeting')} - #{hf_get_cohort(student)}",
                  coaching_student_path(student) %> <br />
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
