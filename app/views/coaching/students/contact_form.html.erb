<br />
<div class="container">
  <div class="col-md-10">
    <div class="card">
        <div class="card-header"><h5>Emailing OASIS Manager</h5></div>
        <div class="card-body" style="background-color: #D6BAF4;">
          <%= form_tag(contact_form_coaching_student_path, action: 'contact_form', method: 'Get', html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do %>
                <div class="form-inputs">
                  <div class="row mb-0">
                    <label for="toEmail" class="form-label col-sm-2">To </label>
                    <div class="col-sm-6">
                      <%= text_field_tag "to", "chomina@ohsu.edu", class: "form-control" %>
                    </div>
                  </div>
                  <div class="row mb-0">
                    <label for="fromEmail" class="form-label col-sm-2">From </label>
                    <div class="col-sm-6">
                      <% student_email = current_user.email %>
                      <%= text_field_tag "from", "#{current_user.email}",  class: "form-control" %>
                    </div>
                  </div>
                  <div class="row mb-0">
                    <label for="subject" class="form-label col-sm-2">Subject</label>
                    <div class="col-sm-6">
                      <%= text_field_tag "subject", "Advisor calendar availability",  class: "form-control" %>
                    </div>
                  </div>
                  <div class="row mb-0">
                    <label for="emailMessage" class="form-label col-sm-2">Message</label>
                    <div class="col-sm-10">
                      <%= text_area_tag "message", nil, size: "25x6", class: "form-control" %>
                    </div>
                  </div>
                  <div class="row mb-0">
                    <%= submit_tag 'Send Email', class: "btn btn-primary col-sm-2", :name => 'commit'%>
                    <div class="col-sm-6">
                      <%= button_tag 'Close Me', type: 'button', class: "btn btn-warning", id: "closeBrowserTab" %>
                    </div>
                  </div>
                </div>

          <% end %>
        </div>

    </div>
  </div>
</div>
