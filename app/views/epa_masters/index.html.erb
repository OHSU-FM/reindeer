
<div id="container-fluid">
    <% if can? :crud, Dashboard %>
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">

                <span class="float-left">
                  <%= link_to("Back Home", main_app.root_path, class: "dashboard-link", style: "float: left; display: block") %>
                <span class="float-left">
                    <%= form_tag({controller: 'epa_reviews', action: 'get_qualtrics'}, {style: "float: left; display: block"}) do %>
                    <%= submit_tag "Download Qualtrics", name: 'form[download]', class: "btn btn-primary", style: "margin:2px;" %>
                    <% end %>
                </span>

                 <%= form_tag(epa_masters_path, method: 'get',  style: "float: right; display: block") do %>
                     <span class="float-left">
                     <%= select_tag :permission_group_id, options_for_select(@student_groups.collect{|s| [s.title, s.id]}, selected: params[:permission_group_id]),
                         prompt: "Please Select Cohort" %>
                     </span>
                     <span class="float-left">
                       <%= select_tag :user_id, options_for_select(@cohort_students.collect{|s| [s.full_name, s.id]}, selected: params[:user_id]),
                           prompt: "Please Select a Student" %>
                     </span>
                   <%= submit_tag "Go", name: 'form1[student]', class: "btn btn-success" %>
                 <% end %>
                 <span class="float-right">
                    <%= form_tag(epa_masters_path,  action: 'search_student',  method: "get",  style: "float: right; display: block") do %>
                      <%= text_field_tag :search, params[:search], placeholder: "Enter LastName, FirstName" %>
                      <%= submit_tag "Search", name: 'form2[search]', class: "btn btn-success"%>
                    <% end %>
                  </span>
                  <span>
                    <% if !@users.nil? %>
                        <% if @users.count > 1 %>
                            <div class="panel panel-default", style="float: right; display: inline-block">
                              <div class="panel-heading">
                                  <h4 class="panel-title">Search Result </h4>
                              </div>
                              <div class="panel-body">

                                      <% @users.each do |u| %>
                                         <%= u.full_name %><br />
                                      <% end %>
                              </div>
                            </div
                        <% elsif @users.empty? %>
                          <div class="panel panel-default">
                            <div class="panel-body">
                               <i><b>Not Found in Users Table!</b></i>
                            </div>
                          </div
                        <% end %>
                    <% end %>
                  </span>
            </div>
          </div>
        </div>
    <% end %>
    <div id=main2-epa-masters %>
      <%= render partial: 'epa_masters_table' %>
    </div>

    <div id="main-epa-masters"> </div>
    <div id="mymodal-epa-review"></div>
    <div id="mymodal-epa-master"></div>
    <div id="mymodal-load-qualtrics"></div>
</div>
