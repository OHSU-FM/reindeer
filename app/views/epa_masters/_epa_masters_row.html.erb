<tr>
  <td><%= epa_master.epa %></td>
  <% if epa_master.badged? %>
    <td><%= image_tag ("epa/#{epa_master.epa}.png"), size: "100x80", class: "img-responsive" , data: {imagezoom: "true" } %> <br />
        Award Date: <b><%= hf_format_date(epa_master.status_date) %></b><br />
        Expiration date: <b><%= hf_format_date(epa_master.expiration_date) %></b>
    </td>
  <% else %>
    <td><%= image_tag ("epa/#{epa_master.epa}.png"), size: "100x80", class: "img-responsive opaque-image" %></td>
  <% end %>

  <td>
    <table>
        <% epa_master.epa_reviews.each do |review| %>
        <tr>
          <td>
              <%= review.review_date1.nil? ? review.review_date1 : review.review_date1.strftime("%m-%d-%Y")  %> /
              <% if review.badge_decision1 == "Badge" %>
                <span class="text-success"> <%= review.badge_decision1 %></span> /
              <% else %>
                 <span class="bg-danger text-white"> <%= review.badge_decision1 %></span> /
              <% end %>
              <%= review.reviewer1 %> /
              <b><%= review.general_comments1 %></b> /

              <%= review.review_date2.nil? ? review.review_date2 : review.review_date2.strftime("%m-%d-%Y")  %> /
              <% if review.badge_decision2 == "Badge" %>
                <span class="text-success"> <%= review.badge_decision2 %></span> /
              <% else %>
                 <span class="bg-danger text-white"> <%= review.badge_decision2 %></span> /
              <% end %>
              <%= review.reviewer2 %> /
              <b><%= review.general_comments2 %></b>
              <%= link_to '', new_epa_review_path(epa_master_id: epa_master.id), {remote: true, controller: 'epa_reviews', action: :new,
                  'data-target' => '#mymodal-epa-review', class: "glyphicon glyphicon-plus"}%>
              <%= link_to '', edit_epa_review_path(id: review.id), {remote: true, controller: 'epa_reviews', action: :edit,
                  'data-target' => '#mymodal-epa-review', class: "glyphicon glyphicon-pencil"}  %>
              <%= link_to '', epa_review_path(id: review.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'delete_review glyphicon glyphicon-trash' %>

            </td>
          </tr>
        <% end %>
      </table>
      <% if epa_master.epa_reviews.blank? %>
        <%= link_to 'Review', new_epa_review_path(epa_master_id: epa_master.id), {remote: true, controller: 'epa_reviews', action: :new,
           'data-target' => '#mymodal-epa-review', class: "glyphicon glyphicon-plus"} %>
      <% end %>
    </td>
</tr>
