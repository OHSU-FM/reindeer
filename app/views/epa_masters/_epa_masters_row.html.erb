<tr>

<td><%= epa_master.epa %></td>
<% if epa_master.statuses? %>
  <td><%= image_tag ("epa/#{epa_master.epa}.png"), size: "100x80", class: "img-responsive" , data: {imagezoom: "true" } %> <br />
      Award Date: <b><%= hf_format_date(epa_master.status_date) %></b><br />
      Expiration date: <b><%= hf_format_date(epa_master.expiration_date) %></b>
  </td>
<% else %>
  <td><%= image_tag ("epa/#{epa_master.epa}.png"), size: "100x80", class: "img-responsive opaque-image" %></td>
<% end %>

  <td>
    <% epa_master.epa_reviews.each do |review| %>
      <div style="display:inline-block;">
        <%= review.review_date1.strftime("%m-%d-%Y")  %> /
        <% if review.egm_recommendation == "Badge" %>
          <span class="text-success"> <%= review.egm_recommendation %></span> /
        <% else %>
           <span class="bg-danger text-white"> <%= review.egm_recommendation %></span> /
        <% end %>
        <%= review.reviewed_by1 %> /
        <b><%= review.general_comments %></b>
        <%= link_to 'Edit', edit_epa_review_path(id: review.id), {remote: true, controller: 'epa_reviews', action: :edit,
            'data-target' => '#mymodal-epa-review', class: "btn btn-success btn-sm"}  %>
      </div>
      <br />
    <% end %>
    <span>
      <%= link_to 'New Review', new_epa_review_path(epa_master_id: epa_master.id), {remote: true, controller: 'epa_reviews', action: :new,
      'data-target' => '#mymodal-epa-review', class: "btn btn-primary btn-sm"}%>
    </span>
  </td>

</tr>
