<tr>
<td><%= epa_master.user_id %></td>
<td><%= epa_master.epa %></td>
<td><%= epa_master.status %></td>
<td><%= hf_format_date(epa_master.status_date) %></td>
<td><%= hf_format_date(epa_master.expiration_date) %></td>
<% if epa_master.statuses? %>
  <td><%= image_tag ("epa/#{epa_master.epa}.png"), size: "100x80", class: "img-responsive" %> </td>
<% else %>
  <td>Not Badge</td>
<% end %>
  <td>
    <% epa_master.epa_reviews.each do |review| %>
      <div style="display:inline-block;">
        <%= review.review_date1.strftime("%m-%d-%Y")  %> / <%= review.egm_recommendation %> / <%= review.reviewed_by1%>
        <%= link_to 'Edit', edit_epa_review_path(id: review.id), {remote: true, controller: 'epa_reviews',
            'data-target' => '#mymodal-epa-review', class: "btn btn-success btn-sm"}  %>
      </div>
      <br />
    <% end %>
    <span>
      <%= link_to 'New Review', new_epa_review_path(epa_master_id: epa_master.id), {remote: true, controller: 'epa_reviews', action: 'new', 'data-target' => '#mymodal-epa-review', class: "btn btn-primary btn-sm"}%>
    </span>
  </td>

</tr>
