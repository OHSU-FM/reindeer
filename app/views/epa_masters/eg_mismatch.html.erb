
<div class="container" >
      <br />
        <div class="card">
          <div class="card-body card-body-color">
            <%= form_tag(eg_mismatch_epa_masters_path, method: "get", id: 'eg_mismatch_form') do %>
              <div class="form-group navbar-form navbar-left">
                 <b>Cohort </b> <%= select_tag :cohort, options_for_select(@permission_groups.sort.collect{|s| [s.title, s.id]}, selected: params[:cohort]), include_blank: '--',
                    prompt: "Please Select a Cohort", required: true, id: "misMatchCohortId" %>

                 <b>EG Member </b> <%= select_tag :eg_member, options_for_select(@uniq_eg_members, selected: params[:eg_member]), include_blank: '--',
                    prompt: "Please Select an EG Member", id: "misMatchEGMember" %>
                  <%= submit_tag "Go" %>
              </div>
          </div>
        </div>

      <% if !@epa_masters.nil? and !@epa_masters.include? "No Mismatch"%>
        <div class="container">
          <div id="eg_mismatch">
            <%= render partial: 'detail_eg_mismatch' %>
          </div>
        </div>
      <% else %>
        <h3><%= @epa_masters %></h3>
      <% end %>
    <% end %>
</div>
