<div class="col-sm-2">
   <table id="EPATable" class="table borderless table-condensed table-striped table-hover ls_reports_filter spreadsheet-body">
      <tr>
          <th><center>EPA</center></th>
          <th><center>Average Complete (%)</center></th>
      </tr> 
      <tr>
          <td><center>Overall Progress</center></td>
          <td><center><%= @class_mean[0] %></center></td>
      </tr>
      <% for j in 1..13 %>
          <tr>
              <td><center> 
                  <a href="#" data-html="true" rel="tooltip" <span style="white-space: normal" data-toggle="tooltip" title="<%= hf_get_epa_desc("EPA"+j.to_s) %>" ><%= j %></a></span>                       
                
              </center></td>
              <td><center><%= @class_mean[j] %></center></td>
          </tr>
      <% end %>
   </table>    
</div>  

<div class="col-sm-6">
    <div id="epa-container-<%= graph_color %>" style="min-width: 600px; height: 600px; margin: 0 auto"></div>
    <div id="graph-buttons">
    <button id="plain" class="btn btn-info btn-sm">Column</button>
    <button id="inverted" class="btn btn-info btn-sm">Bar</button>
    <button id="polar" class="btn btn-info btn-sm">Polar</button>
    </div>
</div>  
