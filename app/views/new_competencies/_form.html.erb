
<%= simple_form_for(@new_competency) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :permission_group_id %>
    <%= f.input :student_uid %>
    <%= f.input :email %>
    <%= f.input :medhub_id %>
    <%= f.input :course_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
