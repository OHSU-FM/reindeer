<div id="top" class="section scrollspy"></div>
<p id="notice"><%= notice %></p>

<div class="row">
  <%= link_to 'Back', reviews_path %>
</div>

<div class="row">
  <div class="col-lg-8 col-sm-10 col-md-7">
    <h1><%= @review.title %> for <%= @review.user.full_name %></h1>
  </div>
  <div class="col-lg-2 col-sm-2 col-md-1">
    <%= link_to "#{@review.id}.pdf", class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-file">Make it a PDF!</i>
    <% end %>
  </div>
</div>

<div class="row">
  <p>This review has <%= pluralize(@review.sources.count, 'source') %>.</p>
</div>

<div class="row">
  <div class="col-lg-10 col-sm-12 col-md-7">
    <div id="introduction" class="section scrollspy">
      <%= render partial: "fte_numbers", locals: {review: @review} %>
    </div>
    <div id="clinical" class="section scrollspy">
      <%= render partial: "clinical", locals: {review: @review} %>
    </div>
    <div id="education" class="section scrollspy">
      <%= render partial: "education", locals: {review: @review} %>
    </div>
    <div id="survey-comments" class="section scrollspy">
      <%= render partial: "survey_comments", locals: {review: @review} %>
    </div>
  </div>
  <div class="col-md-4 col-lg-2">
    <div id="scroll-spy-nav" class="hidden-print affix-top hidden-sm hidden-xs" role="complementary" data-spy="affix" data-offset-top="500">
      <ul class="section table-of-contents nav">
        <li><a href="#top">Top of page</a></li>
        <li><a href="#introduction">FTE</a></li>
        <li><a href="#clinical">Clinical</a></li>
        <li><a href="#education">Education</a></li>
        <li><a href="#survey-comments">Peer Comments</a></li>
      </ul>
    </div>
  </div>
</div>
