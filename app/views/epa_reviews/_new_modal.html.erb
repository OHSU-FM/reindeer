<div id="newEpaReviewModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
  <div class="modal-dialog modal-lg" style="width:1250px;">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title title-inline" ><%= controller.action_name.capitalize %> Review - <b><font color="blue">
              <%= @epa_review_epa %></b></font> </h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body row">
            <% if !@reviewable.nil? %>
                <% if @reviewable.epa_reviews.count > 0  %>
                   <%= render partial: "epa_reviews/list_reviewable" %>
                <% end %>
            <% end %>
            <%= render partial: "epa_reviews/form" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
  </div>
</div>
