<div class="row main fade-in two">
  <div class="col-md-6 main fade-in two">
    <h1><%= link_to Settings.assignments_route_name.titleize.pluralize, assignment_root_path, {:class => "back-to-assignment-root"} %></h1>
  </div>
  <div class="col-md-6 main fade-in two" style="height:69px; display:table;vertical-align:middle;">
    <div style="display:table-cell; vertical-align:middle;">
      <button id="assignment-nav-toggle" type="button" class="btn btn-default" aria-label="Menu" style="float:right; vertical-align:bottom; margin: 0 auto;">
        Menu <span class="glyphicon glyphicon-menu-hamburger"></span>
      </button>
    </div>
  </div>
</div>

<%= render partial: "assignment/shared/assignment_nav", locals: { display: "none" } %>

<%= render partial: "assignment/shared/response_nav" %>

<div class="fade-in two left-panel left-panel-scroll">
  <h2 class="left-panel-title"><%= hf_ua_title_prettify @user_assignment %></h2>
  <%= render partial: "assignment/user_assignments/deep_rows", locals: { ua: @user_assignment } %>
</div>

<div class="fade-in two right-panel" style="text-align:center;">
  <div class="centered-content">
    <i class="fa fa-archive fa-5x"></i>
  </div>
</div>
