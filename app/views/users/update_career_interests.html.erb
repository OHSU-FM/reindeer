<br><br>
<div class="card" >
  <%= simple_form_for(@user, url: save_career_interests_users_path(@user), method: :get, local: true, html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.hidden_field :sid, value: @user.sid %>
    <%= f.hidden_field :uuid, value: @user.uuid %>
    <% if @user.sid.nil? %>
      <div class="form-group">
        <%= f.input :email, disabled: true, label: "Email (Disabled)", input_html: {style: 'width: 600px; background-color: #D8A7B1'} %>
        <%= f.input :sid, disabled: false, label: "StudentID ", input_html: {style: 'width: 600px; background-color :#B4F8C8'} %>
      </div>
    <% else %>
    <div class="form-group">
      <%= f.input :sid, disabled: true, label: "StudentID (Disabled)", input_html: {style: 'width: 600px; background-color: #D8A7B1'} %>
    </div>
    <% end %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :full_name, input_html: {style: 'width: 600px; background-color: #B4F8C8'} %>
      </div>
      <br>
      <div class="form-group">
        <% if @user.career_interest.present? %>
          <%= f.input :career_interest, as: :array, input_html: {style: 'width: 600px; background-color: #B4F8C8; border-radius: 5px;'}, wrapper: :horizontal_form  %>
        <% else %>
          <%= f.input :career_interest, as: :string, input_html: { name: 'user[career_interest][]' }, placeholder: '1st Choice' %>
          <%= f.input :career_interest, as: :string, input_html: { name: 'user[career_interest][]' }, placeholder: '2nd Choice' %>
          <%= f.input :career_interest, as: :string, input_html: { name: 'user[career_interest][]' }, placeholder: '3rd Choice' %>
        <% end %>

      </div>
    </div>
    <br>
    <div class="form-actions">
      <%= f.button :submit, "Save Career Interests", class: 'btn btn-success' %>
      <%= link_to "Cancel", :back, class: 'btn btn-warning' %>
    </div>
  <% end %>
</div>
